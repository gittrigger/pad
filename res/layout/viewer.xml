	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
	
		<Button android:id="@+id/menu_confirm" android:text="@string/menu_confirm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />	
		<Button android:id="@+id/menu_append" android:text="@string/menu_append" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />
		<Button android:id="@+id/menu_top" android:text="@string/menu_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />
		<Button android:id="@+id/menu_up" android:text="@string/menu_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />
		<Button android:id="@+id/menu_down" android:text="@string/menu_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />
		
	</LinearLayout>

</LinearLayout>
         
 