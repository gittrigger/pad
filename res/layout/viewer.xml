<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	 
	
	<EditText android:id="@+id/content_title" 
	  	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:background="#a0a050"
		android:textSize="6pt"
		android:layout_weight="0" 
		android:nextFocusDown="@+id/content_body" 
		android:selectAllOnFocus="true" 
		android:gravity="center"
		android:padding="2px" android:singleLine="true" />
		
	<EditText android:id="@+id/content_body" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:textColor="#c0c040"
		android:layout_weight="1" 
		android:background="#000000"
		android:scrollbars="vertical" 
		android:layout_gravity="top" 
		android:scrollbarAlwaysDrawVerticalTrack="true" 
		android:nextFocusUp="@+id/content_title"
		android:padding="1px" android:scrollbarStyle="insideOverlay" android:gravity="center_vertical" android:linksClickable="true" android:longClickable="true" android:marqueeRepeatLimit="1" android:scrollbarAlwaysDrawHorizontalTrack="false"/>
		
				
